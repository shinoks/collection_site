<div class="footer-area">
    <div class=" footer">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6 wow fadeInRight animated">
                    <div class="single-footer">
                        <h4>{{ 'address'|trans|capitalize }} </h4>
                        <div class="footer-title-line"></div>
                        <ul class="footer-adress">
                            <li><i class="pe-7s-map-marker strong"> </i> {{ config.config.address }}</li>
                            <li><i class="pe-7s-mail strong"> </i> {{ config.config.email }}</li>
                            <li><i class="pe-7s-call strong"> </i> {{ config.config.phone }}</li>
                        </ul>
                        <br/>
                        <div id="map" class="mapmin"></div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 wow fadeInRight animated">
                    <div class="single-footer">
                        <h4>{{ 'links'|trans }} </h4>
                        <div class="footer-title-line"></div>
                        <ul class="footer-menu">
                        {% if menu.getMenu is not empty %}
                            {% for menuItem in menu.getMenu %}
                                {% if menuItem.inFooter %}
                                <li>
                                    <a href="{{ menuItem.href }}">{{ menuItem.name }}</a>
                                </li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        </ul>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 wow fadeInRight animated">
                    <div class="single-footer">
                        <h4>{{ 'news'|trans }}</h4>
                        <div class="footer-title-line"></div>
                        <div class="fb-page" data-href="https://www.facebook.com/bsprojektakcjonariusze" data-tabs="timeline" data-width="" data-height="250" data-small-header="true" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="false"><blockquote cite="https://www.facebook.com/bsprojektakcjonariusze" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/bsprojektakcjonariusze">BS Projekt</a></blockquote></div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 wow fadeInRight animated">
                    <div class="single-footer news-letter">
                        {{ render(controller('App\\Controller\\SubscriberController::getSubscribeForm')) }}
                        <div class="social pull-right">
                            <ul>
                                {% for soc in social.getSocial %}
                                    <li>
                                        <a class="wow fadeInUp animated" href="{{ soc.href }}">
                                            <i class="{{ soc.htmlClass }}" data-wow-delay="0.2s"> </i>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <div class="footer-copy text-center">
        <div class="container">
            <div class="row">
                <div class="pull-left">
                    <span> {{ config.config.title }}  </span>
                </div>
                <div class="bottom-menu pull-right">
                    <ul>
                        {% if menu.getMenu is not empty %}
                            {% for menuItem in menu.getMenu %}
                                {% if menuItem.inBottom %}
                                    <li>
                                        <a class="wow fadeInUp animated"  href="{{ menuItem.href }}" data-wow-delay="0.2s">{{ menuItem.name }}</a>
                                    </li>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

