{% set title = 'invest.invest'|trans %}
{% extends 'front/base.html.twig' %}

{% block head %}
    {{ parent() }}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}

{% block body %}
    {% include 'front/addons/top.html.twig' %}

    <div class="content-area blog-page padding-top-40" style="background-color: #FCFCFC; padding-bottom: 55px;">
        <div class="container">
            <div class="blog-lst col-md-12 pl0">
                <div class="well text-center">
                    <h3>Wybierz sposób płatności:</h3>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <b>Ilość akcji:</b> {{ iloscAkcji }}
                            </div>
                            <div class="col-md-6">
                                <b>Kwota do zapłaty:</b> {{ kwotaDoZaplaty }}
                            </div>
                        </div>
                    </div>
                    <div class="panel">
                        <div class="panel-body">
                            <img style='width:150px;padding-bottom: 10px;' src="{{ asset('img/przelewy24logo.png') }}"/>
                            <form method="get" action="https://sklep.przelewy24.pl/zakup.php">
                                <input type="hidden" name="z24_id_sprzedawcy" value="{{ merchantId }}">
                                <input type="hidden" name="z24_crc" value="{{ crc }}">
                                <input type="hidden" name="z24_return_url" value="https://bsprojekt-akcjonariusze.pl/invest/payed">
                                <input type="hidden" name="z24_language" value="pl">
                                <input type="hidden" name="z24_nazwa" value="Opłata za zakup akcji transkacja nr: {{ nrTransakcji }}">
                                <input name="z24_opis" type='hidden' value="{{ dodatkowyOpis }}">
                                <input type="hidden" name="z24_kwota">
                                <input class="btn btn-default" type="submit" value="zapłać z przelewy24.pl">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

