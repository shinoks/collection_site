{% extends 'front/base.html.twig' %}

{% block body %}
    <!-- register-area -->
    <div class="register-area" style="background-color: rgb(249, 249, 249);">
        <div class="container">

            {% include 'front/addons/flashMessages.html.twig' %}

            {% if app.user %}
                <div class="col-md-12">
                    {{ 'youre_logged_on'|trans }} {{ app.user.username }}<br/>
                    <a href="{{ path('logout') }}" class="btn btn-success">{{ 'logout'|trans }}</a>
                </div>
            {%  else %}
            <div class="col-md-12">
                <div class="box-for overflow">
                    <div class="col-md-6 col-xs-12 login-blocks well grey" style="height: 390px">
                        <h2>{{ 'login'|trans }} : </h2>
                        {% if error %}
                            <div   class="bg-warning">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                        <form action="{{ path('login') }}" method="post">
                            <div class="form-group">
                                <label for="username">{{ 'email'|trans }}:</label>
                                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" />
                            </div>
                            <div class="form-group">
                                <label for="password">{{ 'password.password'|trans }}:</label>
                                <input class="form-control" type="password" id="password" name="_password" />
                            </div>
                            <input type="hidden" name="_target_path" value="/" />

                            <button type="submit" class="btn btn-default">{{ 'login'|trans }}</button>
                        </form>
                        <br/>
                            <a href="{{ path('reset_password') }}">{{ 'password.dont_remember'|trans }}</a>
                    </div>
                    <div class="col-md-6 col-xs-12 login-blocks well grey center" style="height: 390px; padding: 50px;">
                        <div class="row text-center">
                            <a class="btn btn-default" style="color:#fff;display:block;margin:5px;font-weight:normal;" href="{{ fbLink }}">
                                <i class="fa fa-facebook-square" style="font-size: 25px;padding-right:10px"> </i>
                                Zaloguj z facebook
                            </a>
                        </div>
                        <div class="row text-center">
                            <a class="btn btn-red" style="display:block;margin:5px;font-weight:normal;" href="{{ googleLink }}">
                                <i class="fa fa-google-plus-square" style="font-size: 25px;padding-right:10px"> </i>
                                Zaloguj z google
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
{% endblock %}

